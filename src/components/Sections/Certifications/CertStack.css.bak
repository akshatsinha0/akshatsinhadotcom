/* Isolated stacked cards CSS with gradient glow effect (AWS-like) */
.certstack[data-csx]{--csx-card-bg:rgb(243,243,247);--csx-card-h:clamp(260px,58vh,520px);--csx-top:clamp(64px,12vh,112px);--csx-gap:clamp(56px,10vh,120px);--csx-overlap:calc(var(--csx-card-h) - var(--csx-gap));--csx-radius:22px;--csx-count:5;position:relative;max-width:min(1100px,92vw);margin:4rem auto;padding-bottom:calc((var(--csx-count) - 1) * var(--csx-gap) + 15vh)}

.certstack-zone{position:relative;isolation:isolate;z-index:5}
.certstack-lock{height:100vh}
.certstack-scrollport{height:100%;overflow-y:auto;overscroll-behavior:contain;scrollbar-width:none;-ms-overflow-style:none}
.certstack-scrollport::-webkit-scrollbar{display:none}

.certstack{position:relative;height:calc(var(--csx-top) + var(--csx-card-h) + (var(--csx-count) - 1) * var(--csx-gap));padding-top:var(--csx-top)}
.certstack-stack{position:relative;list-style:none;margin:0;padding:0;height:100%}

.certstack-item{position:relative}
.certstack-card{position:sticky;top:0;height:var(--csx-card-h);background:var(--csx-card-bg);border-radius:var(--csx-radius);border:1px solid rgba(2,6,23,.06);margin-top:calc(var(--csx-i) * var(--csx-gap));z-index:calc(100 - var(--csx-i));transform:none;transition:box-shadow .25s ease;overflow:hidden;will-change:transform}

/* Gradient top glow (pink→violet→blue) */
.certstack-card::before{content:"";position:absolute;left:-6%;right:-6%;top:-14%;height:40%;background:linear-gradient(90deg,rgba(236,72,153,.35) 0%,rgba(168,85,247,.45) 45%,rgba(59,130,246,.40) 100%);filter:blur(26px);opacity:0;transition:opacity .25s ease;z-index:-1;-webkit-mask-image:linear-gradient(to bottom,rgba(0,0,0,1) 0%,rgba(0,0,0,.45) 40%,rgba(0,0,0,0) 100%);mask-image:linear-gradient(to bottom,rgba(0,0,0,1) 0%,rgba(0,0,0,.45) 40%,rgba(0,0,0,0) 100%)}
.certstack-card:hover::before{opacity:1}

.certstack-card:hover{box-shadow:0 24px 48px rgba(17,24,39,.08);transform:none}

.certstack-card-body{display:flex;align-items:center;gap:24px;padding:28px 34px;height:100%}
.certstack-logo{width:64px;height:64px;border-radius:16px;background:linear-gradient(135deg,#fff 0%,#f9fafb 100%);display:grid;place-items:center;overflow:hidden;flex:0 0 auto;box-shadow:0 2px 8px rgba(0,0,0,.06)}
.certstack-logo img{max-width:85%;max-height:85%;object-fit:contain}

.certstack-text{flex:1;display:flex;flex-direction:column;gap:6px}
.certstack-title{margin:0;font-size:clamp(1.05rem,1.8vw,1.3rem);font-weight:600;line-height:1.3;color:#0f172a}
.certstack-sub{font-size:.92rem;color:#64748b}

.certstack-id{margin-top:8px;display:inline-flex;align-items:center;gap:8px;font-family:ui-monospace,SFMono-Regular,Menlo,monospace;font-size:.85rem;color:#334155;background:rgba(148,163,184,.08);padding:6px 12px;border-radius:10px;border:1px solid rgba(148,163,184,.15);transition:all .2s ease;cursor:pointer;width:fit-content}
.certstack-id:hover{background:rgba(148,163,184,.15);transform:translateX(2px)}
.certstack-copied{font-size:.75rem;color:#10b981;font-weight:500}

@media (max-width:640px){.certstack[data-csx]{--csx-card-h:220px;--csx-gap:48px}.certstack-card-body{padding:20px 22px}.certstack-logo{width:52px;height:52px}.certstack-title{font-size:1.05rem}}
